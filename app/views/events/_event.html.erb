<li class="col-md-4">
  <div class="event_image">
    <% if event.event_image? %>
      <%= link_to image_tag(event.event_image.url), event_path(event) %>
    <% else %>
      <%= link_to image_tag("noimage.png"), event_path(event) %>
    <% end %>
  </div>
  <div class="flex">
    <div class="tag tag_event">
      <%= event_tag(event.tag) %>
    </div>
    <div class="date">
      <%= event.holded_at %>
    </div>
  </div>
  <div class="event_title">
    <%= link_to event.title, event_path(event) %>
  </div>
</li>
